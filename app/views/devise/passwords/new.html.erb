<div class="new_session__container">
  <div class="new_session__content">
    <h2 class="registration-header">Forgot your password?</h2>

    <div class="new_session__form">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form__item">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field full"  %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "field full submit" %>
        </div>
      <% end %>
    </div>

    <div class="new_session__form">
      <%= render "devise/shared/links" %>
    </div>
</div>